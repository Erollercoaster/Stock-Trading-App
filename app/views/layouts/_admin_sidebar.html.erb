<aside id="admin-sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0">
  <div class="flex flex-col h-full py-4 overflow-y-auto bg-gray-800 text-gray-100">
    <div class="px-3 mb-6">
      <div class="flex items-center p-2 space-x-4">
        <div>
          <h2 class="text-sm font-semibold"><%= current_user.email %></h2>
          <span class="text-xs text-gray-400">Admin</span>
        </div>
      </div>
    </div>
    
    <nav class="px-3 flex-grow">
      <ul class="space-y-1">
        <li>
          <%= link_to root_path, class: "flex items-center p-2 rounded-lg #{current_page?(root_path) ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700'}" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span>Dashboard</span>
          <% end %>
        </li>
        
        <li>
          <%= link_to admin_users_path, class: "flex items-center p-2 rounded-lg #{current_page?(admin_users_path) ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700'}" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <span>Manage Users</span>
          <% end %>
        </li>
        
        <li>
        <%= link_to new_admin_user_path, class: "flex items-center p-2 rounded-lg text-gray-300 hover:bg-gray-700" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
          </svg>
          <span>Create User</span>
        <% end %>
      </li>
        
        <li>
          <%= link_to admin_transactions_path, class: "flex items-center p-2 rounded-lg #{current_page?(admin_transactions_path) ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700'}" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <span>Transactions</span>
          <% end %>
        </li>
      </ul>
    </nav>
    
    <div class="px-3 mt-auto">
      <div class="pt-2 border-t border-gray-700">
        <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center justify-center p-2 text-sm font-medium rounded-lg text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          Logout
        <% end %>
      </div>
    </div>
  </div>
</aside>